{
  "name": "@shelf/xxxxxx",
  "version": "0.0.0",
  "description": "xxxxxx",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "https://shelf.io"
  },
  "main": "lib",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "yarn build:code && yarn build:artifact",
    "build:artifact": "(cd lib && zip -r ../artifact.zip .)",
    "build:code": "NODE_ENV=production webpack",
    "coverage": "jest --coverage",
    "dev": "NODE_ENV=development webpack --mode=development --watch",
    "lint": "eslint . --ext .js,.ts,.json --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "test": "jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,json,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": "@shelf/prettier-config",
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "delegate-it": "1.1.0",
    "dom-chef": "3.6.3",
    "dom-loaded": "2.0.0",
    "select-dom": "6.0.0",
    "webext-options-sync": "1.2.2"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-transform-react-jsx": "7.9.4",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@shelf/eslint-config": "0.14.2",
    "@shelf/prettier-config": "0.0.7",
    "@types/chrome": "0.0.102",
    "@types/copy-webpack-plugin": "5.0.0",
    "@types/jest": "25.1.4",
    "@types/node": "12",
    "@types/webpack": "4.41.8",
    "babel-jest": "25.2.4",
    "babel-loader": "8.1.0",
    "copy-webpack-plugin": "5.1.1",
    "eslint": "6.8.0",
    "husky": "4.2.3",
    "jest": "25.2.4",
    "lint-staged": "10.0.9",
    "prettier": "2.0.2",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-bundle-analyzer": "3.6.1",
    "webpack-cli": "3.3.11",
    "webpack-extension-reloader": "1.1.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
